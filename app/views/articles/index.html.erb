<p id="notice"><%= notice %></p>

<h1>記事一覧</h1>
  <%= paginate @articles %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td class="hstack gap-3">
          <%= link_to '詳細', article, class: "btn btn-success mr-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '記事作成', new_article_path %>
